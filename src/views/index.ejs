<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lab Test 2</title>
    <%- include('../template/header'); %>
</head>
<body class="container mx-auto bg-light py-4">
<div class="card">
    <div class="card-header d-flex flex-row">
        <h1>Students</h1>
        <span class="flex-grow-1"></span>
        <button class="btn btn-primary px-4" data-toggle="modal" data-target="#exampleModal">Add</button>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped rounded">
            <tr>
                <td>Student Id</td>
                <td>Student Name</td>
                <td>Program</td>
                <td>Term</td>
                <td>Action</td>
            </tr>
            <% data.forEach(function(student) { %>
            <tr>
                <td><%= student.id %></td>
                <td><%= student.name %></td>
                <td><%= student.program %></td>
                <td><%= student.term %></td>
                <td>
<!--                    <button class="btn btn-info btn-sm">Edit</button>-->
                    <form action="/api/v1/students/delete" method="post">
                        <input type="hidden" value="<%= student.id %>" name="id">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </table>
    </div>
</div>
<!--Add Student Modal-->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form action="javascript:void(0)" id="studentAddForm" onsubmit="addStudent(this)">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add New Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="student_id">Student Id</label>
                        <input type="text" name="id" class="form-control" id="student_id" required>
                        <small id="emailHelp" class="form-text text-muted">Enter Unique student ID</small>
                    </div>
                    <div class="form-group">
                        <label for="name">Student Name</label>
                        <input type="text" name="name" class="form-control" id="name" required>
                        <small id="emailHelp" class="form-text text-muted">Enter student name</small>
                    </div>
                    <div class="form-group">
                        <label for="program">Student program</label>
                        <select name="program" id="program" class="form-control" >
                            <option></option>
                            <option>MADT</option>
                            <option>CSAT</option>
                            <option>FSDT</option>
                            <option>CPCT</option>
                        </select>
                        <small id="emailHelp" class="form-text text-muted">Select student program</small>
                    </div>
                    <div class="form-group">
                        <label for="term">Student program</label>
                        <select name="term" id="term" class="form-control" >
                            <option></option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                        <small id="emailHelp" class="form-text text-muted">Select student term</small>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" id="submitBtn" class="btn btn-primary ladda-button" data-style="expand-right">
                    <span class="ladda-label">Submit</span>
                </button>
            </div>
        </div>
        </form>
    </div>
</div>

<%- include('../template/footer'); %>
<script>
    const form = $("#studentAddForm");
    const submitBtn = $("#submitBtn");

    function openModal() {
        $('#exampleModal').show();
    }

    function addStudent(event) {
        const laddaBtn = Ladda.create(document.querySelector('#submitBtn'));
        console.log(laddaBtn);
        const data = getFormData(form);
        laddaBtn.start();
        $.post('/api/v1/students', data).done(function( data ) {
            laddaBtn.stop();
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        });
    }

    function getFormData($form){
        var unindexed_array = $form.serializeArray();
        var indexed_array = {};

        $.map(unindexed_array, function(n, i){
            indexed_array[n['name']] = n['value'];
        });

        return indexed_array;
    }

</script>
</body>
</html>
